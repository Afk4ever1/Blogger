<%- include ("partials/header.ejs") %>
<div class="blog_creating_container">
  <h1>Create Your Blog</h1>
  <form id="submit" action="/submit" method="POST">
    <div class="title">
      <label for="articleTitle">Title</label>
      <input
        type="text"
        id="articleTitle"
        name="title"
        placeholder="Blog Title"
        required
      />
    </div>
    <div class="author_name">
      <label for="authorName">Author Name</label>
      <input
        type="text"
        name="author"
        id="authorName"
        placeholder="Author Name"
        required
      />
    </div>
    <div class="summary">
      <label for="blogSummary">Blog Summary</label>
      <textarea
        name="summary"
        id="blogSummary"
        placeholder="Keep it shorter than 255 character"
        maxlength="255"
        required
      ></textarea>
    </div>
    <div class="essay">
      <label for="yourEssay">Article</label>
      <textarea
        name="article"
        id="yourEssay"
        placeholder="Your Essay"
        required
      ></textarea>
    </div>
    <div class="submit">
      <input class="submit" type="submit" value="Submit" />
    </div>
  </form>
</div>

